generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id           String   @id @default(cuid())
  title        String   // custom event name
  code         String   @unique
  maxPhotos    Int
  usedPhotos   Int      @default(0) // counter of uploaded photos
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  photos       Photo[]
}

model Photo {
  id         String   @id @default(cuid())
  eventId    String
  event      Event    @relation(fields: [eventId], references: [id])
  url        String   // URL in Cloudinary
  publicId   String   // Cloudinary public ID for reference and deletion
  width      Int      @default(0) // Image width
  height     Int      @default(0) // Image height
  creator    String   // name of the photo creator
  createdAt  DateTime @default(now())
}
